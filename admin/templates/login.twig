{% extends "public-base.twig" %}

{% block content %}
    <style type="text/css">
      /* Override some defaults */
      html, body {
        background-color: #eee;
      }
      body {
        padding-top: 40px;
      }
 
      /* The white background content wrapper */
      .container > .content {
        background-color: #fff;
        padding: 20px;
        margin: 0 auto 40px;
        -webkit-border-radius: 10px 10px 10px 10px;
        -moz-border-radius: 10px 10px 10px 10px;
        border-radius: 10px 10px 10px 10px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
        box-shadow: 0 1px 2px rgba(0,0,0,.15);
        width: 300px;
      }
 
      .login-form {
        margin-left: 70px;
        width: 300px;
      }

      form {
        margin-top: 10px;
      }

      legend {
        margin-right: -50px;
        font-weight: bold;
        color: #404040;
      }
 
    </style>

    <script type="text/javascript">
    $(document).ready(function() {
      $("#username").focus();
    });
    </script>
 
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="login-form span4">
                    <h2>Login</h2>
                    {{ error|raw }}
                    <form action="" method="post">
                        <fieldset>
                            <div class="clearfix">
                                <input type="text" name="username" id="username" placeholder="Username">
                            </div>
                            <div class="clearfix">
                                <input type="password" name="password" id="password" placeholder="Password">
                            </div>
                            <div class="clearfix">
                              <button class="btn btn-inverse" namne="login" type="submit">Sign in <i class="icon-arrow-right icon-white"></i></button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
{% endblock %}