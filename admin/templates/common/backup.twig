                  </tr>
                </thead>
                <tbody>
                  {% for data in data %}
                  <tr>
                    <td>{{ data.id }}</td>
                    <td><a href="/admin/core/download-backup.php?id={{ data.id }}">{{ data.file }}</a></td>
                    <td>{{ data.date|date("j M Y - H:i:s") }}</td>
                    <td>
                      {% if data %}
                      {% if settings.delete == 1 %}
                      <a class="btn btn-small delete" id="{{ data.id }}" href="#"><i class="icon-trash"></i> Delete</a>
